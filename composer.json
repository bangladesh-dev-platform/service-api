{
    "name": "banglade.sh/auth-api",
    "description": "Centralized authentication REST API for Bangladesh CMS micro-apps",
    "type": "project",
    "require": {
        "php": "^8.1",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "firebase/php-jwt": "^6.9",
        "vlucas/phpdotenv": "^5.6",
        "respect/validation": "^2.3",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyze": "phpstan analyse src --level=5"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
