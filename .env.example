# Application
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080
AUTH_PORTAL_URL=http://localhost:4173

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cms_db
DB_USER=cms_user
DB_PASS=secure_password

# JWT
JWT_SECRET=your-secret-key-change-this-to-random-string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRY=900        # 15 minutes
JWT_REFRESH_TOKEN_EXPIRY=604800    # 7 days
JWT_EMAIL_VERIFICATION_EXPIRY=86400 # 24 hours

# Email (for future implementation)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@banglade.sh
MAIL_FROM_NAME="Bangladesh Auth"
MAIL_ENCRYPTION=null

# Roles & Permissions
DEFAULT_USER_ROLE=subscriber
ADMIN_EMAILS=admin@banglade.sh

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173,https://youtube.banglade.sh
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Download service
YTDLP_SERVICE_URL=http://yt-dlp-service-app:8085
YTDLP_SERVICE_TOKEN=
YTDLP_SERVICE_TIMEOUT=15
YTDLP_SERVICE_TIERS=1080p,720p,480p,audio
